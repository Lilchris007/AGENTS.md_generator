{
  "version": 1,
  "project": {
    "name": "python-lib",
    "stack": "python",
    "notes": "Recipe: Poetry + pytest + ruff. Commands are explicit to avoid guesswork."
  },
  "files": {
    "agents": "AGENTS.md",
    "runbook": "RUNBOOK.md"
  },
  "safety": {
    "marker_only": true,
    "diff_first": true,
    "no_network": true,
    "no_exec": true
  },
  "commands": {
    "install": [
      "poetry install"
    ],
    "dev": [
      "poetry run python -m pip --version"
    ],
    "test": [
      "poetry run pytest -q"
    ],
    "lint": [
      "poetry run ruff check .",
      "poetry run ruff format --check ."
    ],
    "format": [
      "poetry run ruff format ."
    ],
    "build": [
      "poetry build"
    ]
  },
  "pack": {
    "enabled": true,
    "format_default": "json",
    "include": [
      "llms.txt",
      "SECURITY_AI.md",
      "CONTRIBUTING_AI.md",
      "README_SNIPPETS.md",
      "docs/ai/**"
    ],
    "notes": "Pack files are generated by agentsgen pack. This config just documents what you expect in the repo."
  }
}
