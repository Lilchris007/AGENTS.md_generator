{
  "version": 1,
  "project": {
    "name": "monorepo-js",
    "stack": "js-monorepo",
    "notes": "Recipe: JS monorepo with workspaces. Commands run at repo root."
  },
  "files": {
    "agents": "AGENTS.md",
    "runbook": "RUNBOOK.md"
  },
  "safety": {
    "marker_only": true,
    "diff_first": true,
    "no_network": true,
    "no_exec": true
  },
  "commands": {
    "install": [
      "pnpm install --frozen-lockfile"
    ],
    "dev": [
      "pnpm dev"
    ],
    "test": [
      "pnpm test"
    ],
    "lint": [
      "pnpm lint"
    ],
    "build": [
      "pnpm build"
    ]
  },
  "pack": {
    "enabled": true,
    "format_default": "json",
    "include": [
      "llms.txt",
      "SECURITY_AI.md",
      "CONTRIBUTING_AI.md",
      "README_SNIPPETS.md",
      "docs/ai/**"
    ],
    "notes": "Monorepos benefit most from explicit commands and enforced pack drift checks."
  }
}
